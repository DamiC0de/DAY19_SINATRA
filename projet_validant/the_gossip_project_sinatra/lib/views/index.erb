<%= erb :'layouts/_header.html' %>
    <div class="container">
      <h1 class="mt-4">Mon super site de gossip, depuis le dossier views !</h1>
      <hr>

      <h2>Liste des potins</h2>

      <!-- Utilisation d'une table avec Bootstrap -->
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>Potin N°</th>
            <th>Contenu</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% @gossips.each_with_index do |gossip, index| %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= gossip.content %></td>
              <td><a href="/gossips/<%= index + 1 %>" class="btn btn-primary">Voir la page</a></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <a href="/gossips/new/" class="btn btn-success">Créer un nouveau potin</a>
    </div>

<%= erb :'layouts/_footer.html' %>